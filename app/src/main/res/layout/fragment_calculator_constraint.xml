<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator.ConstraintCalculatorFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="789 + 56"
        android:textSize="30sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="48dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/erase"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="845"
        android:textColor="#919191"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_calculate_24"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/ruler"
        android:padding="16dp" />

    <ImageView
        android:id="@+id/ruler"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_ruler"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/time"
        android:padding="16dp" />


    <ImageView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_access_time_24"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <ImageView
        android:id="@+id/erase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_outline_backspace_24"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/clear"
        android:background="@android:color/darker_gray"
        android:layout_marginHorizontal="28dp"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintBottom_toTopOf="@id/seven"
        android:text="C" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/brackets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/plus_minus"
        app:layout_constraintEnd_toStartOf="@id/comma"
        app:layout_constraintBottom_toTopOf="@id/seven"
        android:text="( )" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintEnd_toStartOf="@id/equals"
        app:layout_constraintBottom_toTopOf="@id/seven"
        android:text="%" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/div"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/comma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seven"
        android:text="รท" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintBottom_toTopOf="@id/fourth"
        android:text="7" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/eight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/plus_minus"
        app:layout_constraintEnd_toStartOf="@id/comma"
        app:layout_constraintBottom_toTopOf="@id/fourth"
        android:text="8" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintEnd_toStartOf="@id/equals"
        app:layout_constraintBottom_toTopOf="@id/fourth"
        android:text="9" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/comma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fourth"
        android:text="โณ" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fourth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintBottom_toTopOf="@id/one"
        android:text="4" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/plus_minus"
        app:layout_constraintEnd_toStartOf="@id/comma"
        app:layout_constraintBottom_toTopOf="@id/one"
        android:text="5" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintEnd_toStartOf="@id/equals"
        app:layout_constraintBottom_toTopOf="@id/one"
        android:text="6" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/comma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/one"
        android:text="-" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintBottom_toTopOf="@id/plus_minus"
        android:text="1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/plus_minus"
        app:layout_constraintEnd_toStartOf="@id/comma"
        app:layout_constraintBottom_toTopOf="@id/plus_minus"
        android:text="2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintEnd_toStartOf="@id/equals"
        app:layout_constraintBottom_toTopOf="@id/plus_minus"
        android:text="3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/comma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/plus_minus"
        android:text="+" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/plus_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="+/-" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/plus_minus"
        app:layout_constraintEnd_toStartOf="@id/comma"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/comma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintEnd_toStartOf="@id/equals"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="," />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/equals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        app:layout_constraintStart_toEndOf="@id/comma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="=" />


</androidx.constraintlayout.widget.ConstraintLayout>